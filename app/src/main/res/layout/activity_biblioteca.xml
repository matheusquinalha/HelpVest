<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_activity"
    tools:context=".BibliotecaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="1">

        <include layout="@layout/toolbar_activity" />

        <Button
            android:id="@+id/btnBibliotecaUnicamp"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="125dp"
            android:layout_marginRight="125dp"
            android:background="@drawable/button_shape"
            android:onClick="entrarBibliotecaUnicamp"
            android:text="@string/btnBibliotecaUnicamp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnBibliotecaFuvest"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="125dp"
            android:layout_marginRight="125dp"
            android:background="@drawable/button_shape"
            android:onClick="EntrarBibliotecaFuvest"
            android:text="@string/btnBibliotecaFuvest"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnBibliotecaEnem"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="125dp"
            android:layout_marginRight="125dp"
            android:background="@drawable/button_shape"
            android:onClick="EntrarBibliotecaUnesp"
            android:text="@string/btnBibliotecaUnesp"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>