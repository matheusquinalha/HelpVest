<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:gravity="center"
    tools:context=".EsqueceuSenhaActivity">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="315dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/txtViewRecuperarSenha"
            android:textAlignment="center"
            android:textColor="@color/colorDark"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="5dp"
                android:hint="@string/edtInformeseuemail"
                android:text="@string/txtViewInformeseuemailEsqueceuSenha"
                android:textColor="@color/colorDark"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/etwEmailForgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/edtEmailEsqueceuSenha"
                android:inputType="textEmailAddress" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRecuperar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ripple"
                    android:text="@string/btnRecuperar"
                    android:textColor="@color/colorDark" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="voltarLogin"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ripple"
                    android:text="@string/btnCancelarEsqueceuSenha"
                    android:textColor="@color/colorDark"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

